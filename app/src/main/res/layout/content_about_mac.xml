<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.macbitsgoa.pawpals.AboutMAC"
    tools:showIn="@layout/activity_about_mac">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/content_about_us_app_name"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:minHeight="45dp"
         android:layout_gravity="center"
         android:gravity="center"
         android:textColor="@color/green700"
         android:textSize="20sp"
         android:text="PawPals Android App"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/green700"
            android:textSize="15sp"
            android:text="Version 2"/>
    <ImageView
            android:id="@+id/maclogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green700"
            android:src="@drawable/maclogopng"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageButton
                android:id="@+id/about_mac_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:src="@drawable/ic_facebook_white"
                android:background="@color/green700"/>
            <ImageButton
                android:id="@+id/about_mac_playstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:src="@drawable/ic_google_play"
                android:background="@color/green700"/>

        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/large_text"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="Contributors"
        android:textColor="#000000"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/large_text" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
